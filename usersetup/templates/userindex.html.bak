
{% extends 'main.html' %}
{% load static %}
{% block adminmenu %}
<!-- sidebar menu: : style can be found in sidebar.less -->
      <!-- sidebar menu: : style can be found in sidebar.less -->
      <ul class="sidebar-menu">
          <li class="active treeview">
          <a href="/usersetup/userindex/">
            <i class="fa fa-user-plus"></i> <span>User Setup</span>
            <span class="pull-right-container">
            <!--    <i class="fa fa-angle-left pull-right"></i> -->
            </span>
          </a>
        <li class="treeview">
          <a href="/project/projectindex/">
            <i class="fa fa-folder"></i>
            <span>Project Setup</span>
            <span class="pull-right-container">
            </span>
          </a>
        </li>
        <li class="treeview">
          <a href="/schema/config/">
            <i class="fa fa-database"></i> <span>DB Setup</span>
            <span class="pull-right-container">
            </span>
          </a>
        </li>
        </li>
        </ul>
<!-- /.sidebar -->
{% endblock adminmenu %}
{% block contentmain %}
<section class="content-header">
  <h1>
    Users
  </h1>
  <ol class="breadcrumb">
    <li><a href="/home/main/"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active">User Setup</li>
  </ol>
</section>
		 <!-- /.label above user -->
<div class="col-lg-12 col-xs-4" style="margin:20px 0 0 0;">
  <!-- small box -->
  <div class="small-box bg-aqua">
    <div class="inner">
      <h3>{{users.count}}</h3>
      <p>Users</p>
    </div>
    <div class="icon">
      <i class="ion ion-person-add"></i>
    </div>
    <a href="/usersetup/usersgup/" class="small-box-footer">
      Add User <i class="fa fa-arrow-circle-right"></i>
    </a>
  </div>
</div>
		
		<!--  user expandable box -->
{% if users %}
  {% for all in users %}	  
    <div class="col-lg-12 col-xs-4">
      <div class="box box-default collapsed-box">
        <div class="box-header with-border">
          <div class="row">
            <form method="POST">
              {% csrf_token %}
              <div class="col-lg-9 col-xs-4">
                <!-- Display all user name -->
                <h3 class="box-title">{{ all.first_name }} </h3>
              </div>
              <div class="col-lg-1 col-xs-4">
                <!-- Edit Button -->
                <a href="/usersetup/edit/{{all.id}}"> <button type="button" style="width:80px;"  class="btn btn-block btn-success"> Edit </button> </a>
              </div>
              <div class="col-lg-2 col-xs-4">
                <!-- Delete Button -->
                <a href="/usersetup/delete/{{all.id}}" data-confirm="Are you sure you want to delete?"> 
				<button type="button"  style="width:80px;" class="btn btn-block btn-danger">Delete</button> </a>
              </div>
            </form>
          </div>
          <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"> <i class="fa fa-plus"> </i> </button>
          </div>
          <!-- /.box-tools -->
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          Mobile No : {{ all.mobile_number }}
        </div>
        <div class="box-body">
          Email Id : {{ all.email }}
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
    {% endfor %}
{% else %}
  <p>No users are available.</p>
{% endif %}
       

<!-- Jquery -->
<script src="{% static 'maincss/bower_components/jquery/dist/jquery.min.js' %}"></script>
<!-- jQuery UI 1.11.4 -->
<script src="{% static 'maincss/bower_components/jquery-ui/jquery-ui.min.js' %}"></script>
<script type="text/javascript">
  var acc = document.getElementsByClassName("accordion");
  var i;

  for (i = 0; i < acc.length; i++) {
      acc[i].onclick = function(){ 
      /* Toggle between adding and removing the "active" class,
      to highlight the button that controls the panel */
      this.classList.toggle("active");

      /* Toggle between hiding and showing the active panel */
      var panel = this.nextElementSibling;
      if (panel.style.display === "block") {
          panel.style.display = "none";
        } 
      else {
          panel.style.display = "block";
        }
    }
  }
  
  //Confirmation Modal
  $(document).ready(function() {
    $('a[data-confirm]').click(function(ev) {
        var href = $(this).attr('href');
        if (!$('#dataConfirmModal').length) {
            $('body').append('<div id="dataConfirmModal" class="modal fade" role="dialog" aria-labelledby="dataConfirmLabel" aria-hidden="true"><div class="modal-dialog" role="document"><div class="modal-content"><div class="modal-header"><button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button><h3 id="dataConfirmLabel">Please Confirm</h3></div><div class="modal-body"></div><div class="modal-footer"><button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button><a class="btn btn-primary" id="dataConfirmOK">OK</a></div></div></div></div>');
        }
        $('#dataConfirmModal').find('.modal-body').text($(this).attr('data-confirm'));
        $('#dataConfirmOK').attr('href', href);
        $('#dataConfirmModal').modal({
            show: true
        });
        return false;
    });
})
</script>

{% endblock %}